<%= form_tag login_path, url: login_path do %>
  <%= text_field_tag :email, nil, placeholder: "email" %>
  <%= password_field_tag :password, nil, placeholder: "password" %>


  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

  <%= submit_tag %>
<% end %>
