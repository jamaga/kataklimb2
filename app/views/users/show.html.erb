<h1><%=  @user.name %></h1>

<h3> belongs to these groups:</h3>
<ul>
<% @user.groups.each do |group| %>
<li><%= group.name %></li>
<% end %>
</ul>

<%= image_tag (@user.userpic.url), :class => "style_profilepic" %>

<dl class="dl-horizontal">

<%= button_to "Delete this user", user_path(@user), method: :delete %> </dl>

<%= link_to "Update this user", edit_user_path(@user.id)%>
