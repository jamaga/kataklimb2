<h1><%= @group.name %></h1>

<h3>Members of this Group:</h3>

<ul>
<% @group.users.each do |user| %>
<li><%= user.name %></li>
<% end %>
</ul>



<dl class="dl-horizontal">
	<%= button_to "Delete this group", group_path(@group), method: :delete %> 
</dl>

<%= link_to "Update this group", edit_group_path(@group.id)%>  </br>


<% if current_user %>
	<%= link_to 'join', join_path(@group.id) %>
<% else %>
 <% link_to 'log in to join the group', login_path %>
 <% end %>

  

